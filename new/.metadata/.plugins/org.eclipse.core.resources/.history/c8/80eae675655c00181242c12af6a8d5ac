/*!
 * \brief teken een lijn.
 * \param paramter int.
 */
int LogicLayer::setCommand(char *buf){
	int i = 1;
	int j = 1;
	char str[100];
	strcpy(str, buf);
	char *saveptr;
	char *out;
	char *outArray[10];

	out = strtok_r(str, " ", &saveptr);
	outArray[0] = out;

	while(out != NULL){
		out = strtok_r(NULL, " ", &saveptr);
		outArray[i] = out;
		i++;
	}

	if(outArray[0] == "repeat"){

	}else if(outArray[0]=="buffer"){
		return 0;
	}else if(outArray[0]=="exec"){
		return 0;
	}else if(outArray[0]=="clear"){
		return 0;
	}else if(outArray[0]=="wait"){
		return 0;
	}else{
		command.type = outArray[0];
	}

	while(j<i){
		command.attr1 = outArray[j];
		j++;
		command.attr2 = outArray[j];
		j++;
		command.attr3 = outArray[j];
		j++;
		command.attr4 = outArray[j];
		j++;
		command.attr5 = outArray[j];
		j++;
		command.attr6 = outArray[j];
		j++;
		command.attr7 = outArray[j];
		j++;
		command.attr8 = outArray[j];
		j++;
		command.attr9 = outArray[j];
		j++;
	}

	return 0;
}

