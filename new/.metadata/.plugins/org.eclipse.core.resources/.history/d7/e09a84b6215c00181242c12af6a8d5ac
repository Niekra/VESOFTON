#include <Userinterface.h>

Userinterface::Userinterface() {
	// TODO Auto-generated constructor stub
	LL = LogicLayer();
	IO = InputOutput();
}

Userinterface::~Userinterface() {
	// TODO Auto-generated destructor stub
}

void Userinterface::mainLoop(){

	while(err=0){

		err = IO.read(buf);

		err = LL.set_command(buf);

		err = LL.exec();

	}
}

