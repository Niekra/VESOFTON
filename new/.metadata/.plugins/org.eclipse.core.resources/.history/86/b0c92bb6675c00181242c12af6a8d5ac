/*!
 * \brief teken een lijn.
 * \param paramter int.
 */
int LogicLayer::exec(){
	if (inputArray[0] == "clearscherm"){
		return 0;
	}else if (strcmp(inputArray[0],"exec") != 0){
		return 0;
	}else if (inputArray[0] == "buffer"){
		return 0;
	}else if (inputArray[0] == "repeat"){
		return 0;
	}else if (inputArray[0] == "lijn"){
		return 0;
	}else if (inputArray[0] == "ellips"){
		return 0;
	}else if (inputArray[0] == "rechthoek"){
		return 0;
	}else if (inputArray[0] == "driehoek"){
		return 0;
	}else if (inputArray[0] == "tekst"){
		return 0;
	}else if (inputArray[0] == "bitmap"){
		return 0;
	}else if (inputArray[0] == "wacht"){
			return 0;
	}
	return 0;
}

/*!
 * \brief teken een lijn.
 * \param paramter int.
 */
int LogicLayer::setCommand(char *buf){
	int i = 1;
	int j = 1;
	char str[100];
	strcpy(str, buf);
	char *saveptr;
	char *out;

	out = strtok_r(str, ",", &saveptr);
	inputArray[0] = out;

	while(out != NULL){
		out = strtok_r(NULL, ",", &saveptr);
		inputArray[i] = out;
		i++;
	}
	return 0;
}

